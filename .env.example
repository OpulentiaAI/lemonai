# Local Configuration (for development)
STORAGE_PATH=data/database.sqlite
WORKSPACE_DIR=workspace
RUNTIME_TYPE=docker

# Supabase Configuration (for cloud deployment)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# E2B Configuration (for secure cloud code execution)
E2B_API_KEY=your-e2b-api-key
E2B_TEMPLATE_PYTHON=python
E2B_TEMPLATE_NODEJS=nodejs
E2B_TEMPLATE_GENERAL=base

# LLM Provider API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...
GROQ_API_KEY=gsk_...
XAI_API_KEY=xai-...

# MCP Server Tokens (Optional)
GITHUB_TOKEN=ghp_...
GITLAB_TOKEN=glpat-...
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Frontend Configuration
VITE_API_BASE_URL=https://your-app.vercel.app
VITE_CLOUD_MODE=true

# Optional: Monitoring
SENTRY_DSN=https://...@sentry.io/...
POSTHOG_API_KEY=phc_...
